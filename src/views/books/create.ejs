<%- include('../templates/header_global.ejs', { title }) %>
  <div class="row">
    <div class="col-md-8">
     <% if(err != null) { %>
     <div class="alert alert-danger"> 
      <ul>
      <% err.forEach(v => { %>
        <li><%= v %></li>
      <% }) %>
      </ul>
     </div>
     <% } %>
      <form 
        action="/book/create"
        method="POST"
        enctype="multipart/form-data"
        class="shadow-sm p-3 bg-white"
      >
        <label for="title">Title</label> <br>
        <input type="text" class="form-control" name="title" placeholder="Book title">
        <br>

        <label for="cover">Cover</label>
        <input type="file" class="form-control" name="cover">
        <br>

        <label for="description">Description</label><br>
        <textarea name="description" id="description" class="form-control" placeholder="Give a description about this book"></textarea>
        <br>

        <label for="categories">Categories</label><br>
        <select name="categories[]" multiple id="categories" class="form-control"></select>
        <br><br>

        <label for="stock">Stock</label><br>
        <input type="number" class="form-control" id="stock" name="stock" min=0 value=0>
        <br>

        <label for="author">Author</label><br>
        <input type="text" class="form-control" name="author" id="author" placeholder="Book author">
        <br>

        <label for="publisher">Publisher</label>  <br>
        <input type="text" class="form-control" id="publisher" name="publisher" placeholder="Book publisher">
        <br>

        <label for="Price">Price</label> <br>
        <input type="number" min="1" step=".01" value="1" class="form-control" name="price" id="price" placeholder="Book price">
        <br>

        <!-- <button type="submit" name="status" value="PUBLISH">add</button> -->

        <button class="btn btn-primary" type="submit" name="status" value="PUBLISH">Publish</button>
        <button class="btn btn-secondary" type="submit" name="status" value="DRAFT">Save as draft</button>
      </form>
    </div>
  </div>

<%- include('../templates/footer_global.ejs', { pathName, model: null }) %>