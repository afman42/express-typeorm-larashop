<%- include('../templates/header_global.ejs', { title }) %>

<div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <b>Name:</b> <br/>
        <%= user.name %>
        <br><br>

        <% if(user.avatar) { %>
          <img src="/public/images/<%= user.avatar %>" width="128px"/>
        <% } else { %>
          No avatar
        <% } %>

        <br>
        <br>
        <b>Username:</b><br>
        <%= user.email %>

        <br>
        <br>
        <b>Phone number</b> <br>
        <%= user.phone %>

        <br><br>
        <b>Address</b> <br>
        <%= user.address %>
        
        <br>
        <br>
        <b>Roles:</b> <br>
        <% JSON.parse(user.roles).forEach(role => { %>
            &middot; <%= role %> <br>
        <% }) %>
      </div>
    </div>
  </div>
<%- include('../templates/footer_global.ejs', { pathName: null, model: null }) %>